{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": { "tools": ["Write", "Edit"] },
        "hooks": [{ "type": "command", "command": "./hooks/post-edit.sh" }]
      }
    ],
    "Stop": [
      {
        "hooks": [{ "type": "command", "command": "./hooks/end-of-turn.sh" }]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Bash(go:*)",
      "Bash(gofmt:*)",
      "Bash(goimports:*)",
      "Bash(golangci-lint:*)",
      "Bash(goreleaser:*)",
      "Bash(make:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(echo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(chmod 777 *)",
      "Bash(curl * | bash)",
      "Bash(wget * | bash)",
      "Bash(*> /etc/*)",
      "Bash(*>> /etc/*)",
      "Bash(sudo *)",
      "Bash(su *)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets.*)",
      "Read(**/*credentials*)",
      "Read(**/*password*)",
      "Read(**/.aws/*)",
      "Read(**/.ssh/*)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/secrets.*)",
      "Write(**/*credentials*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)",
      "Edit(**/secrets.*)"
    ]
  }
}
