{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": { "tools": ["Write", "Edit"] },
        "hooks": [{ "type": "command", "command": "./hooks/post-edit.sh" }]
      }
    ],
    "Stop": [
      {
        "hooks": [{ "type": "command", "command": "./hooks/end-of-turn.sh" }]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Edit(**)",
      "Write(**)",
      "Bash(swift:*)",
      "Bash(swiftc:*)",
      "Bash(xcodebuild:*)",
      "Bash(xcrun:*)",
      "Bash(swiftformat:*)",
      "Bash(swift-format:*)",
      "Bash(pod:*)",
      "Bash(fastlane:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(wc:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(echo:*)",
      "Bash(curl:*)"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf ~/*)",
      "Bash(chmod 777 *)",
      "Bash(curl * | bash)",
      "Bash(*> /etc/*)",
      "Bash(sudo *)",
      "Bash(su *)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets.*)",
      "Read(**/*credentials*)",
      "Read(**/*password*)",
      "Read(**/.aws/*)",
      "Read(**/.ssh/*)",
      "Read(**/Keychain/*)",
      "Write(**/.env)",
      "Write(**/.env.*)",
      "Write(**/secrets.*)",
      "Edit(**/.env)",
      "Edit(**/.env.*)"
    ]
  }
}
